<!DOCTYPE html>
<html lang="en">
  <%- include('../views/components/head/head.ejs') -%>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <%- include('../views/components/sidebar/shopSidebar.ejs') -%>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->

          <%- include('../views/components/navbar/navbar.ejs') %>
          <!-- End of Topbar -->
          <span style="display: none" id="currentUser">
            <%= currentUser.fullName %>
          </span>
          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <div
              class="d-sm-flex align-items-center justify-content-between mb-4"
            >
              <h1 class="h3 mb-0 text-gray-800">Users</h1>
            </div>

            <!-- Content Row -->
            <div class="my-4">
              <div class="d-flex flex-wrap justify-content-start">
                <% for (var i = 0; i < users.length; i++) { %>
                <div class="col-xl-3 col-md-6 mb-4">
                  <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                      <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                          <div
                            class="text-xs font-weight-bold text-success text-uppercase mb-1"
                          >
                            <%=users[i].username %>
                          </div>
                          <div class="h5 mb-0 font-weight-bold text-gray-800">
                            <a href="/user/<%=users[i]._id %>"
                              ><%=users[i].fullName %></a
                            >
                          </div>
                        </div>
                        <div class="col-auto">
                          <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <% } %>
              </div>
            </div>

            <div class="chat-container">
              <h3 class="my-5">Messages</h3>
              <div class="chat-main">
                <div class="chat-messages"></div>
              </div>

              <form id="chat-form">
                <div class="form-group d-flex">
                  <input
                    class="form-control col-md-10 mr-4"
                    id="message"
                    type="text"
                    placeholder="Enter a Message"
                    required
                  />
                  <button class="btn btn-primary col-md-2">
                    <i class="fas fa-paper-plane"></i> Send
                  </button>
                </div>
              </form>
            </div>
          </div>

          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <%- include('../views/components/scrollToTop/scrollToTop.ejs') -%>
    <!-- Logout Modal-->
    <%- include('../views/components/logout/logout.ejs') -%>
    <!-- Add Product Modal-->

    <!-- Scripts-->
    <%- include('../views/components/scripts/scripts.ejs') -%>

    <script src="/socket.io/socket.io.js"></script>
    <script>
      const temp = document.getElementById("currentUser").innerText;
      const user = JSON.parse(JSON.stringify(temp));
    </script>
    <script src="/js/message.js"></script>
  </body>
</html>
