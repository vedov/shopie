<!DOCTYPE html>
<html lang="en">
  <%- include('../views/components/head/head.ejs') -%>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('../components/sidebar/sidebar.ejs') -%>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->

          <%- include('../views/components/navbar/navbar.ejs') %>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row py-5 px-4">
              <div class="col-md-12">
                <!-- Profile widget -->
                <div class="overflow-hidden">
                  <div class="px-4 pt-0 pb-4 cover">
                    <img
                      src="<%= currentUser.coverImgUrl %>"
                      alt="..."
                      class="img-cover w-100"
                      style="max-height: 400px; width: 100%; object-fit: cover"
                    />
                    <div
                      class="col-md-12 media align-items-end profile-head profile-info"
                    >
                      <div class="profile mr-3 d-flex flex-column">
                        <img
                          src="<%= currentUser.profileImgUrl %>"
                          alt="..."
                          width="200"
                          height="200"
                          style="
                            max-width: 200px;
                            max-height: 200px;
                            width: 200px;
                            object-fit: contain;
                          "
                          class="rounded mb-2 img-thumbnail"
                        />
                        <div class="w-100">
                          <a
                            class="nav-link collapsed d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm w-100"
                            href="#"
                            data-toggle="modal"
                            data-target="#editUserModal"
                          >
                            <i
                              class="fas fa-plus fa-sm fa-fw mr-2 text-white"
                            ></i>
                            <span class="text-white">Edit User</span>
                          </a>
                        </div>
                      </div>
                      <div
                        class="d-flex align-items-end justify-content-between w-100"
                      >
                        <div class="col-md-3">
                          <h2 class="m-0" id="user-fullname">
                            <b><%- currentUser.fullName %></b>
                          </h2>
                          <p class="text-muted m-0">
                            @<%- currentUser.username %>
                          </p>
                          <p class="text-muted m-0"><%- currentUser.email %></p>
                        </div>
                        <div class="col-md-3">
                          <p class="text-muted m-0">
                            <%- currentUser.location %>
                          </p>
                          <p class="text-muted m-0">
                            <%- currentUser.phoneNumber %>
                          </p>
                        </div>
                        <div
                          class="col-md-6 text-center d-flex justify-content-end"
                        >
                          <ul class="list-inline mb-0">
                            <li class="list-inline-item">
                              <h5 class="font-weight-bold mb-0 d-block">
                                <%- itemsCount -%>
                              </h5>
                              <h6 class="text-muted">Products</h6>
                            </li>
                            <li class="list-inline-item">
                              <h5 class="font-weight-bold mb-0 d-block">
                                <%- ordersCount -%>
                              </h5>
                              <h6 class="text-muted">Orders</h6>
                            </li>
                            <li class="list-inline-item">
                              <h5 class="font-weight-bold mb-0 d-block">
                                <%- acceptedCount -%>
                              </h5>
                              <h6 class="text-muted">Completed Orders</h6>
                            </li>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->

        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <%- include('../views/components/scrollToTop/scrollToTop.ejs') -%>

    <!-- Logout Modal-->
    <%- include('../views/components/logout/logout.ejs') -%>
    <!-- Edit User Modal-->
    <%- include('../views/components/forms/editUser/editUser.ejs') -%>
    <!-- Scripts-->
    <%- include('../views/components/scripts/scripts.ejs') -%>
  </body>
</html>
