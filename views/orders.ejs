<!DOCTYPE html>
<html lang="en">
  <%- include('../views/components/head/head.ejs') -%>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <%- include('../views/components/sidebar/shopSidebar.ejs') -%>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->

          <%- include('../views/components/navbar/navbar.ejs') %>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <div
              class="d-sm-flex align-items-center justify-content-between mb-4"
            >
              <h1 class="h3 mb-0 text-gray-800">Orders</h1>
            </div>

            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col" class="border-0 bg-light">
                      <div class="p-2 pr-3 text-uppercase">Order ID</div>
                    </th>
                    <th scope="col" class="border-0 bg-light">
                      <div class="py-2 text-uppercase">Order Date</div>
                    </th>
                    <th scope="col" class="border-0 bg-light">
                      <div class="py-2 text-uppercase">Customer</div>
                    </th>
                    <th scope="col" class="border-0 bg-light">
                      <div class="p-2 px-3 text-uppercase">Product</div>
                    </th>

                    <th scope="col" class="border-0 bg-light">
                      <div class="py-2 text-uppercase">Price</div>
                    </th>
                    <th scope="col" class="border-0 bg-light">
                      <div class="py-2 text-uppercase">Status</div>
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <% for (var i = 0; i < orders.length; i++) { %>
                  <tr>
                    <td class="border-0 align-top">
                      <strong><%= orders[i]._id %></strong>
                    </td>

                    <td class="border-0 align-top">
                      <strong
                        ><%= orders[i].orderDate.toLocaleString('en-GB')
                        %></strong
                      >
                    </td>
                    <td class="border-0 align-top">
                      <strong
                        ><a href="/user/<%= orders[i]._id %>"
                          ><%= orders[i].customer.username %></a
                        ></strong
                      >
                    </td>
                    <th scope="row " class="border-0 col-md-6">
                      <div class="p-2">
                        <% for(j=0;j<orders[i].orderItems.length;j++) { var item
                        = orders[i].orderItems[j]; if(shop._id.toString() ==
                        item.shop.toString()) { %>
                        <div class="d-flex flex-column">
                          <div class="d-flex py-4" class="align-items-start">
                            <img
                              alt=""
                              width="70"
                              height="70"
                              class="img-fluid rounded mr-4"
                              src="<%= item.imageUrls[0] %>"
                            />
                            <a
                              href="/item/<%= item._id %>"
                              class="text-truncate"
                            >
                              <%= item.name %>
                            </a>
                          </div>
                        </div>
                        <% } }%>
                      </div>
                    </th>

                    <td class="border-0 align-top">
                      <strong>$<%= orders[i].price %></strong>
                    </td>
                    <td class="border-0 align-top"></td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <%- include('../views/components/scrollToTop/scrollToTop.ejs') -%>
    <!-- Logout Modal-->
    <%- include('../views/components/logout/logout.ejs') -%>
  </body>
</html>
