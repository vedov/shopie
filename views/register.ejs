<!DOCTYPE html>
<html lang="en">
  <%- include('../views/components/head/head.ejs') -%>

  <body class="bg-gradient-primary">
    <div class="container">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-7">
              <div class="p-5">
                <div class="text-center">
                  <div class="h1 py-4">
                    <a
                      class="
                        sidebar-brand
                        d-flex
                        align-items-center
                        justify-content-center
                      "
                      href="/"
                    >
                      <div class="sidebar-brand-icon rotate-n-15">
                        <i class="fas fa-store"></i>
                      </div>
                      <div class="sidebar-brand-text mx-3">
                        Shopie<sup></sup>
                      </div>
                    </a>
                  </div>
                  <h1 class="h4 text-gray-900 mb-4">
                    Start your shopping experience!
                  </h1>
                </div>
                <form class="user" action="" method="POST" id="form">
                  <div class="form-group row">
                    <div class="col-sm-12 mb-3 mb-sm-0">
                      <input
                        type="text"
                        class="form-control"
                        id="username"
                        name="username"
                        placeholder="Enter Username"
                      />
                    </div>
                  </div>
                  <div class="form-group row">
                    <div class="col-sm-12 mb-3 mb-sm-0">
                      <input
                        type="text"
                        class="form-control"
                        id="fullName"
                        name="fullName"
                        placeholder="Enter Full Name"
                      />
                    </div>
                  </div>
                  <div class="form-group">
                    <input
                      type="email"
                      class="form-control"
                      id="email"
                      name="email"
                      placeholder="Enter E-mail"
                    />
                  </div>
                  <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                      <input
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                        placeholder="Enter Password"
                      />
                    </div>
                    <div class="col-sm-6">
                      <input
                        type="password"
                        class="form-control"
                        id="confirmPassword"
                        name="confirmPassword"
                        placeholder="Confirm Password"
                      />
                    </div>
                  </div>
                  <div class="form-group col">
                    <p class="mb-1">Do you want to buy or sell goods?</p>
                    <div class="d-flex justify-content-between">
                      <div class="form-check form-check mb-2">
                        <input
                          class="form-check-input"
                          type="radio"
                          name="userType"
                          value="Customer"
                          id="customer"
                        />
                        <label class="form-check-label" for="customer">
                          Customer
                        </label>
                      </div>
                      <div class="form-check form-check mb-2">
                        <input
                          class="form-check-input"
                          type="radio"
                          name="userType"
                          value="Shop"
                          id="shop"
                        />
                        <label class="form-check-label" for="customer">
                          Shop
                        </label>
                      </div>
                    </div>
                  </div>
                  <button class="w-100 btn btn-lg btn-primary" type="submit">
                    Sign up
                  </button>
                </form>
                <hr />
                <div class="text-center">
                  <a class="small" href="forgot-password.html"
                    >Forgot Password?</a
                  >
                </div>
                <div class="text-center">
                  <p class="mt-4 mb-3 text-muted">
                    Have An Account? <a href="/login">Sign in</a>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scripts-->
    <%- include('../views/components/scripts/scripts.ejs') -%>
  </body>
</html>
