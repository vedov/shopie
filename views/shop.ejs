<!DOCTYPE html>
<html lang="en">
  <%- include('../views/components/head/head.ejs') -%>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('../views/components/sidebar/shopSidebar.ejs') -%>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->

          <%- include('../views/components/navbar/navbar.ejs') %>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row py-5 px-4">
              <div class="col-md-12">
                <!-- Profile widget -->
                <div class="overflow-hidden">
                  <div class="px-4 pt-0 pb-4 cover">
                    <img
                      src="http://placehold.jp/1920x400.png"
                      alt="..."
                      class="img-cover"
                    />
                    <div
                      class="col-md-12 media align-items-end profile-head profile-info"
                    >
                      <div class="profile mr-3">
                        <img
                          src="https://images.unsplash.com/photo-1522075469751-3a6694fb2f61?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=80"
                          alt="..."
                          width="200"
                          class="rounded mb-2 img-thumbnail"
                        /><a
                          href="#"
                          class="btn btn-outline-dark btn-sm btn-block"
                          >Edit profile</a
                        >
                      </div>

                      <div class="media-body mb-5">
                        <h2 class="m-0"><b><%- user.fullName %></b></h2>
                        <p class="text-muted m-0">@<%- user.username %></p>
                        <p class="text-muted m-0"><%- user.email %></p>
                        <p class="d-none" id="userId"><%- user._id %></p>
                      </div>
                      <div class="p-4 d-flex text-center">
                        <ul class="list-inline mb-0">
                          <li class="list-inline-item">
                            <h5 class="font-weight-bold mb-0 d-block">
                              <%- itemsCount -%>
                            </h5>
                            <h6 class="text-muted">Products</h6>
                          </li>
                          <li class="list-inline-item">
                            <h5 class="font-weight-bold mb-0 d-block">
                              <%- ordersCount -%>
                            </h5>
                            <h6 class="text-muted">Orders</h6>
                          </li>
                          <li class="list-inline-item">
                            <h5 class="font-weight-bold mb-0 d-block">
                              <%- acceptedCount -%>
                            </h5>
                            <h6 class="text-muted">Completed Orders</h6>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-12 d-flex px-4 m-2 justify-content-between">
                <h2>Catalogue</h2>
                <div class="d-flex flex-column form-group">
                  <strong class="w-100">Filter By Category</strong>
                  <div class="d-flex">
                    <select
                      class="form-control"
                      id="category"
                      name="category"
                      onchange="filterCategory(this)"
                    >
                      <option label="All Items" value=""></option>
                      <% for (var i = 0; i < categories.length; i++) { %>
                      <option label="<%= categories[i].name%>">
                        <%= JSON.stringify(categories[i])%>
                      </option>
                      <% } %>
                    </select>
                    <button
                      class="btn btn-outline-secondary flex-shrink-0 ml-4"
                      onclick="clearFilter()"
                    >
                      <i class="fas fa-eraser"></i>
                    </button>
                  </div>
                </div>
              </div>
              <div class="col-md-12 d-flex flex-wrap justify-content-start">
                <% for (var i = 0; i < products.length; i++) { %>
                <div class="card m-4" style="max-width: 250px">
                  <img
                    class="card-img-top"
                    src="<%= products[i].imageUrls[0] %>"
                    alt="Card image cap"
                  />
                  <div class="card-body">
                    <h5 class="card-title">
                      <a href="/item/<%= products[i].id %>"
                        ><%= products[i].name %></a
                      >
                    </h5>
                    <p
                      class="block card-text"
                      style="
                        display: block;
                        text-overflow: ellipsis;
                        word-wrap: break-word;
                        overflow: hidden;
                        max-height: 7.2em;
                        line-height: 1.8em;
                      "
                    >
                      <%= products[i].shortDesc %>
                    </p>
                    <a
                      href="/item/<%= products[i].id %>"
                      class="btn btn-primary"
                      >See More</a
                    >
                  </div>
                </div>
                <% } %>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../views/components/footer/footer.ejs') -%>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <%- include('../views/components/scrollToTop/scrollToTop.ejs') -%>

    <!-- Logout Modal-->
    <%- include('../views/components/logout/logout.ejs') -%>
    <script>
      filterCategory = function (select) {
        var temp = JSON.parse(select.value);
        var selectedCategory = temp._id;

        const userId = document.getElementById("userId").innerText.toString();
        const userUrl = "/user/" + userId;
        window.location = userUrl + "/" + selectedCategory;
      };
      clearFilter = function () {
        const userId = document.getElementById("userId").innerText.toString();
        const userUrl = "/user/" + userId;
        window.location = userUrl;
      };
    </script>
  </body>
</html>
