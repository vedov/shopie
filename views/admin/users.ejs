<!DOCTYPE html>
<html lang="en">
  <%- include('../views/components/head/head.ejs') -%>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <%- include('../views/components/sidebar/adminSidebar.ejs') -%>

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%- include('../views/components/navbar/navbar.ejs') %>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <div
              class="d-sm-flex align-items-center justify-content-between mb-4"
            >
              <h1 class="h3 mb-0 text-gray-800">Tags</h1>
              <a
                href="#"
                class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"
                ><i class="fas fa-download fa-sm text-white-50"></i>Add New
                Tag</a
              >
            </div>

            <!-- Content Row -->
            <div class="row mx-1 my-4">
              <% for (var i = 0; i < users.length; i++) { %>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Type</th>
                    <th scope="col">CRUD</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row" class="text-truncate">
                      <%- users[i].id %>
                    </th>
                    <td><%- users[i].username %></td>
                    <td><%- users[i].email %></td>
                    <td>
                      <% if (users[i].userType == '61c5e1bc22b19b6e50698e49') {
                      %> Customer <% } else { %> Shop <% } %>
                    </td>
                    <td>
                      <div class="row">
                        <a
                          href="#"
                          class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm m-1"
                          ><i class="fas fa-pen fa-sm text-white"> </i
                        ></a>

                        <form
                          action="/user/users/delete/<%= users[i].id %>"
                          method="POST"
                        >
                          <button
                            class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm m-1"
                            onclick="submit"
                          >
                            <i class="fas fa-trash fa-sm text-white"></i>
                          </button>
                        </form>
                        <form
                          action="/user/users/archive/<%= users[i].id %>"
                          method="POST"
                        >
                          <button
                            class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm m-1"
                            onclick="submit"
                          >
                            <i class="fas fa-archive fa-sm text-white"></i>
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>

              <% } %>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../views/components/footer/footer.ejs') -%>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <%- include('../views/components/scrollToTop/scrollToTop.ejs') -%>

    <!-- Logout Modal-->
    <%- include('../views/components/logout/logout.ejs') -%>

    <!-- Scripts-->
    <%- include('../views/components/scripts/scripts.ejs') -%>
  </body>
</html>
