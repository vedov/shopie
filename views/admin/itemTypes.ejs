<!DOCTYPE html>
<html lang="en">
  <%- include('../views/components/head/head.ejs') -%>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <%- include('../components/sidebar/adminSidebar.ejs') -%>

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid my-5">
            <!-- Page Heading -->
            <div
              class="d-sm-flex align-items-center justify-content-between mb-4"
            >
              <h1 class="h3 mb-0 text-gray-800">Item Types</h1>
              <a
                class="nav-link collapsed d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"
                href="#"
                data-toggle="modal"
                data-target="#addItemTypeModal"
              >
                <i class="fas fa-plus fa-sm fa-fw mr-2 text-white"></i>
                <span class="text-white">Add New ItemType</span>
              </a>
            </div>

            <!-- Content Row -->
            <div class="row mx-1 my-4">
              <% for (var i = 0; i < itemTypes.length; i++) { %>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">CRUD</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row" class="text-truncate">
                      <%- itemTypes[i].id %>
                    </th>
                    <td><%- itemTypes[i].name %></td>

                    <td>
                      <div class="row">
                        <a
                          href="#"
                          class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm m-1"
                          ><i class="fas fa-pen fa-sm text-white"></i
                        ></a>
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>

              <% } %>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <%- include('../views/components/scrollToTop/scrollToTop.ejs') -%>

    <!-- Logout Modal-->
    <%- include('../views/components/logout/logout.ejs') -%>
    <!-- Add ItemType Modal-->
    <%- include('../views/components/forms/itemType/addItemType.ejs') -%>

    <!-- Scripts-->
    <%- include('../views/components/scripts/scripts.ejs') -%>
  </body>
</html>
