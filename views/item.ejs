<!DOCTYPE html>
<html lang="en">
  <%- include('../views/components/head/head.ejs') -%>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('../views/components/sidebar/shopSidebar.ejs') -%>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->

          <%- include('../views/components/navbar/navbar.ejs') %>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <section class="py-5">
              <!-- Item Info-->
              <div class="container px-4 px-lg-5 my-5">
                <div class="row gx-4 gx-lg-5 align-items-center">
                  <div class="col-md-6">
                    <div
                      id="carouselExampleIndicators"
                      class="carousel slide"
                      data-ride="carousel"
                      data-interval="1400"
                    >
                      <div class="carousel-inner">
                        <div class="carousel-item active">
                          <img
                            class="d-block w-100"
                            src="<%= item.imageUrls[0] %>"
                            alt="First slide"
                            style="height: 500px; object-fit: contain"
                          />
                        </div>
                        <% for (var i = 1; i < item.imageUrls.length; i++) { %>
                        <div class="carousel-item">
                          <img
                            class="d-block w-100"
                            src="<%= item.imageUrls[i] %>"
                            alt="Second slide"
                            style="height: 500px; object-fit: contain"
                          />
                        </div>
                        <% } %>
                      </div>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <!-- Item ID-->
                    <div class="small mb-1">Item ID: <%- item.id %></div>
                    <!-- Item Date-->
                    <div class="small mb-1">
                      Published:&nbsp;<b
                        ><%- item.datePublished.toLocaleString('en-GB') %></b
                      >
                    </div>
                    <!-- Shop-->
                    <div class="small mb-1">
                      By:&nbsp;<b
                        ><a href="/user/<%= shop._id %>"
                          ><%- shop.fullName %></a
                        ></b
                      >
                    </div>
                    <h1 class="display-5 fw-bolder"><%- item.name %></h1>
                    <!-- Rating -->
                    <div class="fs-5 mb-1">
                      <div class="d-flex">
                        <span class="h5" style="margin: auto 0"
                          ><%- Math.round((item.avgRating + Number.EPSILON) *
                          10) / 10 %></span
                        >
                        <i class="fas fa-star star"></i>
                      </div>
                    </div>
                    <!-- Brand & Categories-->
                    <div class="fs-5 mb-1">
                      <span class="badge badge-dark"><%- item.brand %></span>
                      <span class="badge badge-info"><%- category %></span>
                    </div>

                    <!-- Tags-->
                    <div class="fs-5 mb-1">
                      <% for (var i = 0; i < tags.length; i++) { %>
                      <span class="badge badge-pill badge-secondary"
                        ><%= tags[i] %></span
                      >
                      <% } %>
                    </div>

                    <div class="d-flex flex-column my-4">
                      <span class="text-decoration-line-through h2"
                        >$<%- item.price %></span
                      >
                      <span class="text-decoration-line-through"
                        >In Stock:&nbsp;<%- item.stock %></span
                      >
                    </div>

                    <p class="p"><%- item.shortDesc %></p>
                    <div class="d-flex">
                      <form action="/item/cart/<%- item.id %>" method="POST">
                        <button
                          class="btn btn-outline-dark flex-shrink-0 mr-4"
                          onclick="submit; callAddToCart()"
                        >
                          Add To Cart
                        </button>
                      </form>
                      <a
                        class="btn btn-outline-dark flex-shrink-0 mr-4"
                        href="#"
                        data-toggle="modal"
                        data-target="#addReviewModal"
                      >
                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2"></i>
                        <span>Add Review</span>
                      </a>
                      <form
                        action="/item/wishList/<%- item.id %>"
                        method="POST"
                      >
                        <button
                          class="btn btn-outline-dark flex-shrink-0 heart"
                          onclick="submit"
                        >
                          <i class="far fa-heart"></i>
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              <!-- Item Reviews-->
              <div class="container px-4 px-lg-5 my-5">
                <div class="row gx-4 gx-lg-5 align-items-start">
                  <div class="col-md-12">
                    <h1 class="display-5 fw-bolder">Reviews</h1>
                  </div>
                  <div class="col-md-12">
                    <ol class="list-group list-group-numbered">
                      <% for (var i = 0; i < reviews.length; i++) { %>
                      <li
                        class="list-group-item d-flex justify-content-between align-items-start my-2"
                      >
                        <div class="ms-2 me-auto">
                          <div class="fw-bold">
                            <b><%= reviews[i].user %></b>
                          </div>
                          <%= reviews[i].comment %>
                        </div>
                        <div class="d-flex">
                          <span class="h5" style="margin: auto 0"
                            ><%= reviews[i].rating %></span
                          >
                          <i class="fas fa-star star"></i>
                        </div>
                      </li>
                      <% } %>
                    </ol>
                  </div>
                </div>
              </div>
            </section>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../views/components/footer/footer.ejs') -%>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <%- include('../views/components/scrollToTop/scrollToTop.ejs') -%>
    <!-- Add Review Modal-->
    <%- include('../views/components/forms/review/addReview.ejs') -%>
    <!-- Logout Modal-->
    <%- include('../views/components/logout/logout.ejs') -%>
    <!-- Scripts-->
    <%- include('../views/components/scripts/scripts.ejs') -%>
    <script>
      function callAddToCart() {
        alert("Item Added To Cart!");
      }
      function callAddToWishList() {
        alert("Item Added To Wish List!");
      }
    </script>
  </body>
</html>
