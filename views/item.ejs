<!DOCTYPE html>
<html lang="en">
  <%- include('../views/components/head/head.ejs') -%>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('../views/components/sidebar/shopSidebar.ejs') -%>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->

          <%- include('../views/components/navbar/navbar.ejs') %>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <section class="py-5">
              <div class="container px-4 px-lg-5 my-5">
                <div class="row gx-4 gx-lg-5 align-items-center">
                  <div class="col-md-6">
                    <div
                      id="carouselExampleIndicators"
                      class="carousel slide"
                      data-ride="carousel"
                    >
                      <ol class="carousel-indicators">
                        <li
                          data-target="#carouselExampleIndicators"
                          data-slide-to="0"
                          class="active"
                        ></li>
                        <li
                          data-target="#carouselExampleIndicators"
                          data-slide-to="1"
                        ></li>
                        <li
                          data-target="#carouselExampleIndicators"
                          data-slide-to="2"
                        ></li>
                      </ol>
                      <div class="carousel-inner">
                        <div class="carousel-item active">
                          <img
                            class="d-block w-100"
                            src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg"
                            alt="First slide"
                          />
                        </div>
                        <div class="carousel-item">
                          <img
                            class="d-block w-100"
                            src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg"
                            alt="Second slide"
                          />
                        </div>
                        <div class="carousel-item">
                          <img
                            class="d-block w-100"
                            src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg"
                            alt="Third slide"
                          />
                        </div>
                      </div>
                      <a
                        class="carousel-control-prev"
                        href="#carouselExampleIndicators"
                        role="button"
                        data-slide="prev"
                      >
                        <span
                          class="carousel-control-prev-icon"
                          aria-hidden="true"
                        ></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a
                        class="carousel-control-next"
                        href="#carouselExampleIndicators"
                        role="button"
                        data-slide="next"
                      >
                        <span
                          class="carousel-control-next-icon"
                          aria-hidden="true"
                        ></span>
                        <span class="sr-only">Next</span>
                      </a>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <!-- Item ID-->
                    <div class="small mb-1">Item ID: <%- item.id %></div>
                    <!-- Item Date-->
                    <div class="small mb-1"><%- item.datePublished %></div>
                    <!-- Shop-->
                    <div class="small mb-1">
                      Published By:&nbsp;<b><%- shop.fullName %></b>
                    </div>
                    <h1 class="display-5 fw-bolder"><%- item.name %></h1>
                    <!-- Brand & Categories-->
                    <div class="fs-5 mb-1">
                      <span class="text-decoration-line-through">Brand</span>
                      <span class="text-decoration-line-through">Category</span>
                    </div>
                    <!-- Tags-->
                    <div class="fs-5 mb-1">
                      <span class="text-decoration-line-through">Tag</span>
                      <span class="text-decoration-line-through">Tag</span>
                      <span class="text-decoration-line-through">Tag</span>
                      <span class="text-decoration-line-through">Tag</span>
                    </div>
                    <!-- Type -->
                    <div class="fs-5 mb-1">
                      <span class="text-decoration-line-through">Product</span>
                    </div>

                    <div class="h4 my-4">
                      <span class="text-decoration-line-through">$45.00</span>
                    </div>
                    <p class="lead"><%- item.shortDesc %></p>
                    <div class="d-flex">
                      <button
                        class="btn btn-outline-dark flex-shrink-0 mr-4"
                        type="button"
                      >
                        <i class="bi-cart-fill me-1"></i>
                        Edit Item or Add To Cart
                      </button>
                      <button
                        class="btn btn-outline-dark flex-shrink-0"
                        type="button"
                      >
                        <i class="far fa-heart"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </section>
            <!-- Related items section-->
            <section class="py-5 bg-light">
              <div class="container px-4 px-lg-5 mt-5">
                <h2 class="fw-bolder mb-4">Related products</h2>
                <div
                  class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center"
                >
                  <div class="col mb-5">
                    <div class="card h-100">
                      <!-- Product image-->
                      <img
                        class="card-img-top"
                        src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg"
                        alt="..."
                      />
                      <!-- Product details-->
                      <div class="card-body p-4">
                        <div class="text-center">
                          <!-- Product name-->
                          <h5 class="fw-bolder">Fancy Product</h5>
                          <!-- Product price-->
                          $40.00 - $80.00
                        </div>
                      </div>
                      <!-- Product actions-->
                      <div
                        class="card-footer p-4 pt-0 border-top-0 bg-transparent"
                      >
                        <div class="text-center">
                          <a class="btn btn-outline-dark mt-auto" href="#"
                            >View options</a
                          >
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col mb-5">
                    <div class="card h-100">
                      <!-- Sale badge-->
                      <div
                        class="badge bg-dark text-white position-absolute"
                        style="top: 0.5rem; right: 0.5rem"
                      >
                        Sale
                      </div>
                      <!-- Product image-->
                      <img
                        class="card-img-top"
                        src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg"
                        alt="..."
                      />
                      <!-- Product details-->
                      <div class="card-body p-4">
                        <div class="text-center">
                          <!-- Product name-->
                          <h5 class="fw-bolder">Special Item</h5>
                          <!-- Product reviews-->
                          <div
                            class="d-flex justify-content-center small text-warning mb-2"
                          >
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                          </div>
                          <!-- Product price-->
                          <span class="text-muted text-decoration-line-through"
                            >$20.00</span
                          >
                          $18.00
                        </div>
                      </div>
                      <!-- Product actions-->
                      <div
                        class="card-footer p-4 pt-0 border-top-0 bg-transparent"
                      >
                        <div class="text-center">
                          <a class="btn btn-outline-dark mt-auto" href="#"
                            >Add to cart</a
                          >
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col mb-5">
                    <div class="card h-100">
                      <!-- Sale badge-->
                      <div
                        class="badge bg-dark text-white position-absolute"
                        style="top: 0.5rem; right: 0.5rem"
                      >
                        Sale
                      </div>
                      <!-- Product image-->
                      <img
                        class="card-img-top"
                        src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg"
                        alt="..."
                      />
                      <!-- Product details-->
                      <div class="card-body p-4">
                        <div class="text-center">
                          <!-- Product name-->
                          <h5 class="fw-bolder">Sale Item</h5>
                          <!-- Product price-->
                          <span class="text-muted text-decoration-line-through"
                            >$50.00</span
                          >
                          $25.00
                        </div>
                      </div>
                      <!-- Product actions-->
                      <div
                        class="card-footer p-4 pt-0 border-top-0 bg-transparent"
                      >
                        <div class="text-center">
                          <a class="btn btn-outline-dark mt-auto" href="#"
                            >Add to cart</a
                          >
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col mb-5">
                    <div class="card h-100">
                      <!-- Product image-->
                      <img
                        class="card-img-top"
                        src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg"
                        alt="..."
                      />
                      <!-- Product details-->
                      <div class="card-body p-4">
                        <div class="text-center">
                          <!-- Product name-->
                          <h5 class="fw-bolder">Popular Item</h5>
                          <!-- Product reviews-->
                          <div
                            class="d-flex justify-content-center small text-warning mb-2"
                          >
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                          </div>
                          <!-- Product price-->
                          $40.00
                        </div>
                      </div>
                      <!-- Product actions-->
                      <div
                        class="card-footer p-4 pt-0 border-top-0 bg-transparent"
                      >
                        <div class="text-center">
                          <a class="btn btn-outline-dark mt-auto" href="#"
                            >Add to cart</a
                          >
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </section>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../views/components/footer/footer.ejs') -%>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <%- include('../views/components/scrollToTop/scrollToTop.ejs') -%>

    <!-- Logout Modal-->
    <%- include('../views/components/logout/logout.ejs') -%>

    <!-- Scripts-->
    <%- include('../views/components/scripts/scripts.ejs') -%>
  </body>
</html>
