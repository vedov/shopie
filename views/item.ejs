<!DOCTYPE html>
<html lang="en">
  <%- include('../views/components/head/head.ejs') -%>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('../views/components/sidebar/shopSidebar.ejs') -%>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->

          <%- include('../views/components/navbar/navbar.ejs') %>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <section class="py-5">
              <div class="container px-4 px-lg-5 my-5">
                <div class="row gx-4 gx-lg-5 align-items-center">
                  <div class="col-md-6 ">
                    <div
                      id="carouselExampleIndicators"
                      class="carousel slide"
                      data-ride="carousel"
                    >
                      <ol class="carousel-indicators">
                        <li
                          data-target="#carouselExampleIndicators"
                          data-slide-to="0"
                          class="active"
                        ></li>
                        <li
                          data-target="#carouselExampleIndicators"
                          data-slide-to="1"
                        ></li>
                        <li
                          data-target="#carouselExampleIndicators"
                          data-slide-to="2"
                        ></li>
                      </ol>
                      <div class="carousel-inner">
                        <div class="carousel-item active ">
                          <img
                            class="d-block w-100"
                            src="<%= item.imageUrls[0] %>"
                            alt="First slide"
                            style='height: 500px; object-fit:contain'
                          />
                        </div>
                        <div class="carousel-item">
                          <img
                            class="d-block w-100"
                            src="<%= item.imageUrls[1] %>"
                            alt="Second slide"
                            style='height: 500px; object-fit:contain'
                          />
                        </div>
                        <div class="carousel-item">
                          <img
                            class="d-block w-100"
                            src="<%= item.imageUrls[2] %>"
                            alt="Third slide"
                            style='height: 500px; object-fit:contain'
                          />
                        </div>
                      </div>
                      <a
                        class="carousel-control-prev"
                        href="#carouselExampleIndicators"
                        role="button"
                        data-slide="prev"
                      >
                        <span
                          class="carousel-control-prev-icon"
                          aria-hidden="true"
                        ></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a
                        class="carousel-control-next"
                        href="#carouselExampleIndicators"
                        role="button"
                        data-slide="next"
                      >
                        <span
                          class="carousel-control-next-icon"
                          aria-hidden="true"
                        ></span>
                        <span class="sr-only">Next</span>
                      </a>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <!-- Item ID-->
                    <div class="small mb-1">Item ID: <%- item.id %></div>
                    <!-- Item Date-->
                    <div class="small mb-1">Published:&nbsp;<b><%- item.datePublished.toLocaleString('en-GB') %></b></div>
                    <!-- Shop-->
                    <div class="small mb-1">
                      By:&nbsp;<b><%- shop.fullName %></b>
                    </div>
                    <h1 class="display-5 fw-bolder"><%- item.name %></h1>
                    <!-- Brand & Categories-->
                    <div class="fs-5 mb-1">
                      <span class="badge badge-dark"><%- item.brand %></span>
                      <span class="badge badge-info"><%- category %></span>
                    </div>
                    <!-- Tags-->
                    <div class="fs-5 mb-1">
                      <span class="text-decoration-line-through">Tag</span>
                      <span class="text-decoration-line-through">Tag</span>
                      <span class="text-decoration-line-through">Tag</span>
                      <span class="text-decoration-line-through">Tag</span>
                    </div>


                    <div class="h4 my-4">
                      <span class="text-decoration-line-through">$45.00</span>
                    </div>
                    <p class="p"><%- item.shortDesc %></p>
                    <div class="d-flex">
                      <button
                        class="btn btn-outline-dark flex-shrink-0 mr-4"
                        type="button"
                      >
                        <i class="bi-cart-fill me-1"></i>
                        Edit Item or Add To Cart
                      </button>
                      <button
                        class="btn btn-outline-dark flex-shrink-0"
                        type="button"
                      >
                        <i class="far fa-heart"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>

          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../views/components/footer/footer.ejs') -%>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <%- include('../views/components/scrollToTop/scrollToTop.ejs') -%>

    <!-- Logout Modal-->
    <%- include('../views/components/logout/logout.ejs') -%>

    <!-- Scripts-->
    <%- include('../views/components/scripts/scripts.ejs') -%>
  </body>
</html>
