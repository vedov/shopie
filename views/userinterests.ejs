<!DOCTYPE html>
<html lang="en">
  <%- include('../views/components/head/head.ejs') -%>

  <body class="bg-gradient-primary">
    <div class="container">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-12">
              <div class="p-5">
                <div class="text-center">
                  <div class="h1 py-4">
                    <a
                      class="
                        sidebar-brand
                        d-flex
                        align-items-center
                        justify-content-center
                      "
                      href="/"
                    >
                      <div class="sidebar-brand-icon">
                        <i class="fas fa-store text-primary"></i>
                      </div>
                      <div class="sidebar-brand-text mx-3 text-primary">
                        Shopie<sup></sup>
                      </div>
                    </a>
                  </div>
                  <h1 class="h4 text-gray-900 mb-4">
                    Before we continue, please select what you like.
                  </h1>
                </div>

              
                <hr />
                <div class="row d-flex flex-wrap">
                  <form action="" method="POST">
                    <% for (var i = 0;i<interests.length; i++) {%>
                      <label >
                        <input
                          type="checkbox"
                          class="card-input-element d-none"
                          id="interest-<%= interests[i].name %>"
                          name="interests"
                          placeholder="Interests"
                          value="<%= interests[i].id %>"
                        />
                        <div class="card card-body  d-flex flex-column ">
                          <img
                          class="card-img-top"
                          style="
                            width: 200px;
                            height: 200px;
                            object-fit: cover;
                          "
                          src="<%= interests[i].imgUrl %>"
                          alt="Card image cap"
                          />
                          <h5 class="card-title text-center mt-4 text-secondary">
                          <strong><%= interests[i].name %></strong>
                          </h5>
                        </div>
                      </label>
                    <% }%>
                    <div class="d-flex col-md-12 justify-content-center my-4">
                        <button
                          class="btn btn-primary flex-shrink-0 col-md-6  "
                          onclick="submit"
                        >
                          Start Shopping
                        </button>
                        </div>
                    </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </body>
</html>
