<!DOCTYPE html>
<html lang="en">
  <%- include('../views/components/head/head.ejs') -%>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->

          <%- include('../views/components/navbar/navbar.ejs') %>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <div
              class="d-sm-flex align-items-center justify-content-between mb-4"
            >
              <h1 class="h3 mb-0 text-gray-800">
                Search Results for <%= category %>
              </h1>
              <a
                href="#"
                class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"
                ><i class="fas fa-download fa-sm text-white-50"></i> Generate
                Report</a
              >
            </div>

            <!-- Content Row -->
            <div class="row mx-1 my-4">
              <div class="d-flex flex-wrap justify-content-between">
                <% for (var i = 0; i < products.length; i++) { %>
                <div class="card" style="margin: 20px; max-width: 250px">
                  <img
                    class="card-img-top"
                    src="<%= products[i].imageUrls[0] %>"
                    alt="Card image cap"
                  />
                  <div class="card-body">
                    <h5 class="card-title">
                      <a href="/item/<%= products[i].id %>"
                        ><%= products[i].name %></a
                      >
                    </h5>
                    <p
                      class="block card-text"
                      style="
                        display: block;
                        text-overflow: ellipsis;
                        word-wrap: break-word;
                        overflow: hidden;
                        max-height: 7.2em;
                        line-height: 1.8em;
                      "
                    >
                      <%= products[i].shortDesc %>
                    </p>
                    <a
                      href="/item/<%= products[i].id %>"
                      class="btn btn-primary"
                      >See More</a
                    >
                  </div>
                </div>
                <% } %>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->
        <!-- Footer -->
        <%- include('../views/components/footer/footer.ejs') -%>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <%- include('../views/components/scrollToTop/scrollToTop.ejs') -%>
    <!-- Logout Modal-->
    <%- include('../views/components/logout/logout.ejs') -%>

    <!-- Scripts-->
    <%- include('../views/components/scripts/scripts.ejs') -%>
  </body>
</html>
