<div
  class="modal fade"
  id="addInterestModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Interest</h5>
        <button
          class="close"
          type="button"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">
        Please input new interest name below.
        <form class="interest" action="" method="POST" id="form">
          <div class="form-group">
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              placeholder="Enter Interest Name"
              required
            />
          </div>
          <div class="form-group">
            <input
              type="text"
              class="form-control"
              id="imgUrl"
              name="imgUrl"
              placeholder="Image URL"
              required
            />
          </div>
          <button class="w-100 btn btn-lg btn-primary" type="submit">
            Add
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
