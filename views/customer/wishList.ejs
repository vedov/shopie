<!DOCTYPE html>
<html lang="en">
  <%- include('../views/components/head/head.ejs') -%>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <%- include('../views/components/sidebar/shopSidebar.ejs') -%>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->

          <%- include('../views/components/navbar/navbar.ejs') %>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <div
              class="d-sm-flex align-items-center justify-content-between mb-4"
            >
              <h1 class="h3 mb-0 text-gray-800">My Wish List</h1>
            </div>

            <!-- Wish List  table -->
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col" class="border-0 bg-light">
                      <div class="p-2 px-3 text-uppercase">Product</div>
                    </th>
                    <th scope="col" class="border-0 bg-light">
                      <div class="py-2 text-uppercase">Price</div>
                    </th>
                    <th scope="col" class="border-0 bg-light">
                      <div class="py-2 text-uppercase">Remove</div>
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <% for (var i = 0; i < products.length; i++) { %>
                  <div id="productsLength" style="display: none">
                    <%= products.length %>
                  </div>
                  <tr>
                    <th scope="row" class="border-0">
                      <div class="p-2">
                        <img
                          src="<%= products[i].imageUrls[0] %>"
                          alt=""
                          width="70"
                          class="img-fluid rounded"
                        />
                        <div class="ml-3 d-inline-block align-middle">
                          <h5 class="mb-0">
                            <a
                              href="/item/<%= products[i].id %>"
                              class="text-dark d-inline-block align-middle"
                              id="<%= i %>"
                              ><%= products[i].name %></a
                            >
                          </h5>
                          <div class="d-flex">
                            <div class="d-flex">
                              <span class="h6" style="margin: auto 0"
                                ><%- Math.round((products[i].avgRating +
                                Number.EPSILON) * 10) / 10 %></span
                              >
                              <i class="fas fa-star star"></i>
                              <span style="display: none" id="item<%= i %>"
                                ><%= products[i].id %></span
                              >
                            </div>
                          </div>
                        </div>
                      </div>
                    </th>
                    <td class="border-0 align-middle">
                      <strong>$<%= products[i].price %></strong>
                    </td>
                    <td class="border-0 align-middle">
                      <form
                        action="/user/wishList/remove/<%- products[i].id %>"
                        method="POST"
                      >
                        <button
                          class="btn btn-outline-dark flex-shrink-0 heart"
                          onclick="submit"
                        >
                          <i class="fa fa-trash"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->
        <!-- Footer -->
        
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <%- include('../views/components/scrollToTop/scrollToTop.ejs') -%>
    <!-- Logout Modal-->
    <%- include('../views/components/logout/logout.ejs') -%>
  </body>
</html>
