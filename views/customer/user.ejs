<!DOCTYPE html>
<html lang="en">
  <%- include('../views/components/head/head.ejs') -%>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('../components/sidebar/sidebar.ejs') -%>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->

          <%- include('../views/components/navbar/navbar.ejs') %>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row py-5 px-4">
              <div class="col-md-12">
                <!-- Profile widget -->
                <div class="overflow-hidden">
                  <div class="px-4 pt-0 pb-4 cover">
                    <img
                      src="http://placehold.jp/1920x400.png"
                      alt="..."
                      class="img-cover"
                    />
                    <div
                      class="col-md-12 media align-items-end profile-head profile-info"
                    >
                      <div class="profile mr-3">
                        <img
                          src="https://images.unsplash.com/photo-1522075469751-3a6694fb2f61?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=80"
                          alt="..."
                          width="200"
                          class="rounded mb-2 img-thumbnail"
                        /><a
                          href="#"
                          class="btn btn-outline-dark btn-sm btn-block"
                          >Edit profile</a
                        >
                      </div>

                      <div class="media-body mb-5">
                        <h2 class="m-0"><b><%- user.fullName %></b></h2>
                        <p class="text-muted m-0">@<%- user.username %></p>
                        <p class="text-muted m-0"><%- user.email %></p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->

        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <%- include('../views/components/scrollToTop/scrollToTop.ejs') -%>

    <!-- Logout Modal-->
    <%- include('../views/components/logout/logout.ejs') -%>

    <!-- Scripts-->
    <%- include('../views/components/scripts/scripts.ejs') -%>
  </body>
</html>
